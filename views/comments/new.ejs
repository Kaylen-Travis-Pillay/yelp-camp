<% include ../partials/head_btitle %>
<title>RESTful Blog App | New Comment | Kaylen Travis Pillay</title>
<% include ../partials/head_atitle %>

<div class="container">
    <div class="row" id="centered-form">
            <h2 class="text-center margin-down-20">Add New Comment To <%= campground.title %></h2>
            <form action="/campgrounds/<%= campground._id %>/comments" method="POST" class="form">
                <div class="form-group">
                    <input type="text" placeholder="Author" name="comment[author]" class="form-control">
                </div>
                <div class="form-group">
                    <textarea class="form-control" rows="10" name="comment[body]"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Submit</button>
                </div>
            </form>
        <a href="/campgrounds">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>